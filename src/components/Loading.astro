---
export interface Props {
  message?: string;
  size?: 'small' | 'medium' | 'large';
}

const { 
  message = 'Fetching organization and repository data...', 
  size = 'large' 
} = Astro.props;
---

<div class={`loading-container loading-${size}`}>
  <div class="loading-spinner">
    <div class="spinner"></div>
  </div>
  {message && <p class="loading-message">{message}</p>}
</div>

<style>
  .loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
  }

  .loading-spinner {
    display: inline-block;
  }

  .spinner {
    border-radius: 50%;
    border-style: solid;
    border-color: var(--color-primary-light) var(--color-primary-light) var(--color-primary) var(--color-primary);
    animation: spin 1s linear infinite;
  }

  .loading-small .spinner {
    width: 24px;
    height: 24px;
    border-width: 2px;
  }

  .loading-medium .spinner {
    width: 48px;
    height: 48px;
    border-width: 4px;
  }

  .loading-large .spinner {
    width: 72px;
    height: 72px;
    border-width: 6px;
  }

  .loading-message {
    margin: 0;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  /* Dark theme support */
  [data-theme="dark"] .loading-message {
    color: var(--color-gray-400);
  }

  [data-theme="dark"] .spinner {
    border-color: rgba(59, 130, 246, 0.2) rgba(59, 130, 246, 0.2) var(--color-primary) var(--color-primary);
  }
</style>
