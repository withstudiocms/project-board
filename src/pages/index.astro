---
import BaseLayout from '../layouts/BaseLayout.astro';
import FilterBar from '../components/FilterBar.astro';
import GitHubItem from '../components/GitHubItem.astro';
import { fetchAllItems, getOrgRepositories, fetchOrganization } from '../lib/github';
import { config } from '../config';

const org = config.organization;

// Fetch organization details for avatar
const orgData = await fetchOrganization(org);

// Get query parameters
const url = new URL(Astro.request.url);
const state = url.searchParams.get('state') || 'open';
const type = url.searchParams.get('type') || 'all';
const labelsParam = url.searchParams.get('labels') || '';
const selectedLabels = labelsParam ? labelsParam.split(',').filter(Boolean) : [];

// Fetch data
const allItems = await fetchAllItems(org, { 
  state: state as 'open' | 'closed' | 'all',
  type: type as 'issue' | 'pr' | 'discussion' | 'all',
});

// Extract all unique labels from items
const allLabelsSet = new Set<string>();
allItems.forEach(item => {
  item.labels.forEach(label => {
    allLabelsSet.add(label.name);
  });
});
const allLabels = Array.from(allLabelsSet).sort();

// Filter items by selected labels if any
let filteredItems = allItems;
if (selectedLabels.length > 0) {
  filteredItems = allItems.filter(item => {
    const itemLabelNames = item.labels.map(l => l.name);
    return selectedLabels.some(label => itemLabelNames.includes(label));
  });
}

// Get repositories and organize items by repository
const repositories = await getOrgRepositories(org);

// Sort repositories using configured sort function
const sortedRepositories = repositories.sort(config.repositorySort);

// Group items by repository
const itemsByRepo = new Map<string, typeof filteredItems>();
sortedRepositories.forEach(repo => {
  const repoItems = filteredItems.filter(item => item.repository === repo);
  if (repoItems.length > 0) {
    itemsByRepo.set(repo, repoItems.sort((a, b) => new Date(b.updated_at).getTime() - new Date(a.updated_at).getTime()));
  } else {
	itemsByRepo.set(repo, []);
  }
});

// Determine default selected repository
const defaultRepo = config.defaultRepository && itemsByRepo.has(config.defaultRepository) 
  ? config.defaultRepository 
  : Array.from(itemsByRepo.keys())[0];

const title = `${org} Project Board`;
const description = `Issues, Pull Requests, and Discussions for ${org}`;
---

<BaseLayout 
	title={title} 
	description={description} 
	slug="index"
	avatarUrl={orgData?.avatar_url}>
  <div slot="navigation" style="display: flex; gap: 1rem; align-items: center;">
    <a href="/roadmap">View Roadmap →</a>
    <a href={`https://github.com/${org}`} target="_blank" rel="noopener noreferrer">
      <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true" style="display: inline-block; vertical-align: text-bottom;">
        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
      </svg>
      View on GitHub
    </a>
  </div>
  
  <FilterBar 
    currentState={state}
    currentType={type}
    currentLabels={selectedLabels}
    allLabels={allLabels}
  />
  
  {itemsByRepo.size === 0 ? (
    <div class="empty-state">
      <p>No items found matching your filters.</p>
      <p class="note">Try adjusting your filter criteria or check back later.</p>
    </div>
  ) : (
    <>
      <div class="tabs">
        {Array.from(itemsByRepo.keys()).map((repoName) => (
          <button 
            class={`tab ${repoName === defaultRepo ? 'active' : ''}`}
            data-repo={repoName}
          >
            {repoName}
            <span class="tab-count">{itemsByRepo.get(repoName)?.length || 0}</span>
          </button>
        ))}
      </div>
      
      {Array.from(itemsByRepo.entries()).map(([repoName, repoItems]) => {
        return (
          <div 
            class={`tab-content ${repoName === defaultRepo ? 'active' : ''}`}
            data-repo={repoName}
          >
            <div class="repo-link-container">
              <a href={`https://github.com/${org}/${repoName}`} target="_blank" rel="noopener noreferrer" class="repo-link">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                  <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
                </svg>
                View <code>{org}/{repoName}</code> on GitHub →
              </a>
            </div>
            <div class="items-list">
              {repoItems.map(item => (
                <GitHubItem item={item} />
              ))}
              {repoItems.length === 0 && (
                <div class="empty-list">No items in this repository</div>
              )}
            </div>
          </div>
        );
      })}
    </>
  )}
  
  <p slot="footer">
    Data fetched from <a href={`https://github.com/${org}`} target="_blank" rel="noopener noreferrer">
      github.com/{org}
    </a>
  </p>
</BaseLayout>
    
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');
        
        tabs.forEach(tab => {
          tab.addEventListener('click', () => {
            const repo = tab.getAttribute('data-repo');
            
            // Remove active class from all tabs and contents
            tabs.forEach(t => t.classList.remove('active'));
            tabContents.forEach(tc => tc.classList.remove('active'));
            
            // Add active class to clicked tab and corresponding content
            tab.classList.add('active');
            const content = document.querySelector(`.tab-content[data-repo="${repo}"]`);
            if (content) {
              content.classList.add('active');
            }
          });
        });
      });
    </script>
</BaseLayout>

<style is:global>
  /* Page-specific styles for index page */
  
  .tabs {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    border-bottom: 2px solid var(--border-primary);
    padding-bottom: 0;
    flex-wrap: wrap;
  }
  
  .tab {
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: none;
    border-bottom: 3px solid transparent;
    color: var(--color-text-secondary);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: -2px;
  }
  
  .tab:hover {
    color: var(--color-primary);
    background: var(--color-primary-light);
  }
  
  .tab.active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }
  
  .tab-count {
    background: var(--color-gray-200);
    color: var(--color-gray-700);
    padding: 0.125rem 0.5rem;
    border-radius: 10px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  
  [data-theme="dark"] .tab-count {
    background: rgba(255, 255, 255, 0.15);
    color: var(--color-gray-200);
  }
  
  .tab.active .tab-count {
    background: var(--color-primary);
    color: white;
  }
  
  [data-theme="dark"] .tab.active .tab-count {
    color: var(--color-gray-900);
  }
  
  .tab-content {
    display: none;
  }
  
  .tab-content.active {
    display: block;
  }
  
  .repo-link-container {
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    text-align: left;
  }
  
  .repo-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: 8px;
    color: var(--color-primary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    transition: all 0.2s;
  }
  
  [data-theme="dark"] .repo-link {
    background: var(--bg-tertiary);
  }
  
  .repo-link svg {
    flex-shrink: 0;
  }
  
  .repo-link code {
    background: var(--color-gray-100);
    color: var(--color-gray-800);
    padding: 0.125rem 0.375rem;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.875em;
  }
  
  [data-theme="dark"] .repo-link code {
    background: var(--color-gray-700);
    color: var(--color-gray-100);
  }
  
  .repo-link:hover {
    background: var(--color-primary-light);
    border-color: var(--color-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }
  
  .items-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1.5rem;
  }
  
  .empty-list {
    text-align: center;
    padding: 3rem 2rem;
    color: var(--color-text-tertiary);
    font-style: italic;
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: 8px;
  }
  
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: 8px;
    max-width: 600px;
    margin: 2rem auto;
  }
  
  .empty-state p {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }
  
  .empty-state .note {
    font-size: 0.875rem;
  }
</style>
