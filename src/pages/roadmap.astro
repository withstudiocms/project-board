---
import BaseLayout from '../layouts/BaseLayout.astro';
import { fetchOrganization } from '../lib/github';
import { config } from '../config';
import RoadmapBodyIsland from 'src/components/RoadmapBodyIsland.astro';
import Loading from 'src/components/Loading.astro';

const org = config.organization;
const roadmapRepo = config.roadmapRepository;

// Fetch organization details for avatar
const orgData = await fetchOrganization(org);

const title = `${org} Roadmap`;
const description = `Roadmap RFCs for ${org}`;
---

<BaseLayout 
	title={title} 
    description={description}
    slug="roadmap"
    avatarUrl={orgData?.avatar_url}>
  <div slot="navigation" style="display: flex; gap: 1rem; align-items: center;">
    <a href="/">‚Üê Back to Project Board</a>
    <button id="readme-button" class="readme-button">üìñ View README</button>
  </div>

  <RoadmapBodyIsland server:defer>
    <div slot="fallback">
      <Loading />
    </div>
  </RoadmapBodyIsland>
  
  <p slot="footer">
    Data fetched from <a href={`https://github.com/${org}/${roadmapRepo}`} target="_blank" rel="noopener noreferrer">
      github.com/{org}/{roadmapRepo}
    </a>
  </p>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dialog = document.getElementById('readme-dialog') as HTMLDialogElement | null;
    const openButton = document.getElementById('readme-button');
    const closeButton = document.getElementById('close-dialog');
    
    if (dialog && openButton && closeButton) {
      openButton.addEventListener('click', () => {
        dialog.showModal();
      });
      
      closeButton.addEventListener('click', () => {
        dialog.close();
      });
      
      // Close on backdrop click
      dialog.addEventListener('click', (e) => {
        if (e.target === dialog) {
          dialog.close();
        }
      });
    }
  });
</script>

<style is:global>
  /* Page-specific styles for roadmap page */
  
  .readme-button {
    padding: 0.5rem 1rem;
    background-color: var(--color-primary);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  .readme-button:hover {
    background-color: var(--color-primary-hover);
  }
  
  .readme-dialog {
    max-width: 900px;
    width: 90vw;
    max-height: 85vh;
    border: none;
    border-radius: 12px;
    padding: 0;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    background: var(--bg-secondary);
    color: var(--color-text-primary);
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
  }
  
  [data-theme="dark"] .readme-dialog {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.5), 0 10px 10px -5px rgba(0, 0, 0, 0.4);
  }
  
  .readme-dialog::backdrop {
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
  }
  
  .dialog-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-primary);
    position: sticky;
    top: 0;
    background: var(--bg-secondary);
    z-index: 10;
  }
  
  .dialog-header h2 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
  }
  
  .close-button {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--color-text-secondary);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    transition: all 0.2s;
    line-height: 1;
  }
  
  .close-button:hover {
    background: var(--color-gray-100);
    color: var(--color-text-primary);
  }
  
  [data-theme="dark"] .close-button:hover {
    background: var(--color-gray-700);
  }
  
  .dialog-content {
    padding: 2rem;
    overflow-y: auto;
    max-height: calc(85vh - 100px);
    word-wrap: break-word;
    overflow-wrap: break-word;
    scroll-behavior: smooth;
  }
  
  /* Ensure first element has no top margin */
  .dialog-content :global(*:first-child) {
    margin-top: 0 !important;
  }
  
  /* Markdown content styling */
  .dialog-content :global(h1),
  .dialog-content :global(h2),
  .dialog-content :global(h3),
  .dialog-content :global(h4),
  .dialog-content :global(h5),
  .dialog-content :global(h6) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
    line-height: 1.25;
    color: var(--color-text-primary);
  }
  
  .dialog-content :global(h1) {
    font-size: 2rem;
    border-bottom: 1px solid var(--border-primary);
    padding-bottom: 0.5rem;
  }
  
  .dialog-content :global(h2) {
    font-size: 1.5rem;
    border-bottom: 1px solid var(--border-primary);
    padding-bottom: 0.5rem;
  }
  
  .dialog-content :global(h3) {
    font-size: 1.25rem;
  }
  
  .dialog-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .dialog-content :global(a) {
    color: var(--color-primary);
    text-decoration: none;
  }
  
  .dialog-content :global(a:hover) {
    text-decoration: underline;
  }
  
  .dialog-content :global(ul),
  .dialog-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }
  
  .dialog-content :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .dialog-content :global(code) {
    background: var(--color-gray-100);
    color: var(--color-gray-800);
    padding: 0.125rem 0.375rem;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.875em;
  }
  
  [data-theme="dark"] .dialog-content :global(code) {
    background: var(--color-gray-700);
    color: var(--color-gray-100);
  }
  
  .dialog-content :global(pre) {
    background: var(--color-gray-100);
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }
  
  [data-theme="dark"] .dialog-content :global(pre) {
    background: var(--color-gray-800);
  }
  
  .dialog-content :global(pre code) {
    background: none;
    padding: 0;
  }
  
  .dialog-content :global(blockquote) {
    border-left: 4px solid var(--border-primary);
    padding-left: 1rem;
    margin: 1rem 0;
    color: var(--color-text-secondary);
    font-style: italic;
  }
  
  .dialog-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1rem;
  }
  
  .dialog-content :global(th),
  .dialog-content :global(td) {
    border: 1px solid var(--border-primary);
    padding: 0.5rem;
    text-align: left;
  }
  
  .dialog-content :global(th) {
    background: var(--bg-tertiary);
    font-weight: 600;
  }
  
  .dialog-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 1rem 0;
  }
  
  .roadmap-board {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 1.5rem;
  }
  
  @media (max-width: 1200px) {
    .roadmap-board {
      grid-template-columns: 1fr;
    }
  }
  
  .roadmap-column {
    background: var(--bg-tertiary);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    min-height: 500px;
    max-height: calc(100vh - 300px);
  }
  
  .column-header.discussions {
    background: var(--color-warning);
    border-color: var(--color-warning-dark);
  }
  
  [data-theme="dark"] .column-header.discussions {
    background: var(--color-warning-dark);
    border-color: var(--color-warning-darker);
  }
  
  .column-header.issues {
    background: var(--color-primary);
    border-color: var(--color-primary-hover);
  }
  
  [data-theme="dark"] .column-header.issues {
    background: var(--color-primary-hover);
    border-color: var(--color-primary-active);
  }
  
  .column-header.prs {
    background: var(--color-purple);
    border-color: var(--color-purple-dark);
  }
  
  [data-theme="dark"] .column-header.prs {
    background: var(--color-purple-dark);
    border-color: var(--color-purple-darker);
  }
</style>
